{
  "manifest_version": 2,
  "name": "Zomato Scraper",
  "version": "1.0",
  "description": "Chrome Extension for data scraping and exporting as Excel",

  "permissions": [
    "activeTab",
    "storage",
    "downloads"
  ],

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Zomato Scraper"
  },

  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
